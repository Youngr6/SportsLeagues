<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
    </head>
    <body>

        <div id="wrap">

        <div class="container">

          <div class="masthead">
                  <span class="pull-right">@Html.Partial("_LoginPartial")</span>
            <h3 class="muted brand">Sports Leagues</h3>
            
            <div class="navbar navbar-inverse">
              <div class="navbar-inner">
                <div class="container">
                  <ul class="nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                  </ul>
                </div>
              </div>
            </div><!-- /.navbar -->
          </div>

        <header>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        </div>

    </div>
        <div id="footer">
            <div class="container">
                <p class="pull-right muted"><small>&copy; @DateTime.Now.Year - <a href="mailto:russell.young@bluepony.co.uk">Russell Young</a> - Calibre Systems Ltd</small></p>
            </div>
        </div>

        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
